{
  "compilerOptions": {
    "target": "ES2020",
  "module": "CommonJS",
  "moduleResolution": "Node",
  "outDir": "dist",
  "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "src/types/**/*.d.ts", "test"]
}
